{% block content %}
    {%- if entry.hero|length -%}
        {% include 'sections/_slider' with {
            items:entry.hero.all()
        } %}
    {%- endif -%}

    {% include "sections/_intro-title" with {
        intro: entry.introPage.one
    } %}

    {% include "sections/_intro-text" with {
        testimonial: entry.introPage.one.testimonial.one is not null ? true : false,
        intro: entry.introPage.one
    } %}

    {% include "sections/_filter" %}

    {% include "sections/_case-study-listing" with {
        caseStudies: entry.children().level(3).all(),
        title: 'Case studies by style',
        showItem:entry.children().level(3)|length < 2 ? entry.children().level(3)|length : 2,
        showMore: true,
        breakpoint: -1,
        mode:'tiles'
    } %}

    {% include 'sections/_find-showroom' %}
{% endblock %}
