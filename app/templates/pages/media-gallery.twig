
{% block content %}

    {%- if entry.hero|length -%}
        {% include 'sections/_slider' with {
            items:entry.hero.all()
        } %}
    {%- endif -%}

    {% include "sections/_intro-title" with {
        intro: entry.introPage.one
    } %}

